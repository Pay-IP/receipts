export $(cat dev.env | xargs)
echo

get_resource_from_localhost_port() {
  
  RESOURCE="$1"
  PORT=$2

  echo "=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-"
  echo "GET RESOURCE $RESOURCE"
  echo

  curl -s \
      -H "Content-Type: application/json" \
      -d '{}' \
      -X GET http://localhost:${PORT}/${RESOURCE} | jq .

  echo
  echo
}


# -----------------------------------------------------------------------------------------------

iss_bank_port=55001

get_resource_from_localhost_port "issuing_bank_client_accounts" $iss_bank_port
get_resource_from_localhost_port "issuing_bank_client_account_debits" $iss_bank_port
